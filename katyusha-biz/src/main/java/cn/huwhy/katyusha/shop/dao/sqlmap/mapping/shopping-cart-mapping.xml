<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.huwhy.katyusha.shop.dao.ShoppingCartDao">
  <sql id="COLUMNS">
    id,`member_id`,item_id,sku_id,num,modified,created
  </sql>
  
  <insert id="save" parameterType="OrderPo">
    insert into shopping_cart(
    <include refid="COLUMNS"/>
    )values(
    #{id},#{memberId},#{itemId},#{skuId},#{num},#{modified},#{created}
    ) on duplicate key update
    `num`=VALUES(`num`),modified=VALUES(modified)
  </insert>
  
  <select id="get" resultType="OrderPo" parameterType="java.lang.Long">
    select
    <include refid="COLUMNS"/>
    from shopping_cart where id = #{id}
  </select>
</mapper>
